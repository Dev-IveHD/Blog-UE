<div id='main'>
    <h1>Kategorie bearbeiten</h1>
    <form action='/category_edit' method='post' id='categoryform' class='form'>
        <input type='text' id='id' name='id' style='display:none' value='{{category._id}}'>
        <input type='text' id='catname' name='catname' placeholder='Kategoriename' value='{{category.catname}}'>
        <input type='text' id='caturl' name='caturl' placeholder='Kategorie-URL ohne Sonderzeichen oder Leerzeichen' value='{{category.caturl}}' disabled>
        <input type='submit' value='Kategorie bearbeiten' id='submit'>
    </form>
</div>