<h1>{{category.catname}}</h1>
<ul class="post_list">
{{#each posts}}
    <li>
        <h2>{{this.title}}</h2>
        <div class="post_date">{{this.date}}</div>
        <div class="post_author">{{this.author.Surname}} {{this.author.Name}}</div>
        <div class="post_content_preview">{{this.content}}</div>
    </li>
{{/each}}
</ul>